class student:
    def __init__(self, name, rollno, marks):
        self.name = name
        self.rollno = rollno
        self.marks = marks

    def talk(self):
        print('hello my name is: ', self.name)
        print('my rollno: ', self.rollno)
        print('my marks are:', self.marks)


s1 = student('durga', 101, 80)
s1.talk()
